{
  "manifest_version": 3,
  "name": "Hold On",
  "version": "1.0.0",
  "description": "Help cut down on unnecessary browsing habits by providing a different perspective",
  
  "permissions": [
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "action": {
    "default_popup": "options/options.html",
    "default_title": "Hold On Settings"
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/interventionContent.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
